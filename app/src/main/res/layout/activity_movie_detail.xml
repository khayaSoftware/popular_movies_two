<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin0"
            android:background="@drawable/gradient"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movie_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:contentDescription="@string/content_desc_moviedet"/>
            <!-- COMPLETED REQUIREMENT: Accessibility, include a contentDescription for vision impaired users -->
            <!-- TODO-2 AWESOME Inclusive app design is a win for everybody -->

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin0"
            android:background="@drawable/gradient"
            android:orientation="vertical"
            android:padding="@dimen/margin0">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/neg20"
                android:layout_marginTop="@dimen/pushdown120"
                android:background="@drawable/gradient"
                android:gravity="start"
                android:paddingLeft="@dimen/padding10"
                android:paddingStart="@dimen/padding10"
                android:paddingRight="@dimen/padding10"
                android:paddingEnd="@dimen/padding10"
                android:textColor="@color/white"
                android:textSize="@dimen/font30" />

            <TextView
                android:id="@+id/tv_stats"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient"
                android:gravity="start"
                android:paddingStart="@dimen/padding10"
                android:paddingLeft="@dimen/padding10"
                android:paddingEnd="@dimen/padding10"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorGold"
                android:textSize="@dimen/font14" />
            <!--TODO I put in paddingLeft because its required for older versions -->
            <!-- COMPLETED REQUIREMENT: Internationalization, support LTR languages use e.g. android:paddingStart/End instead of or in addition to android:paddingLeft/Right etc. -->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/borderheight"
                android:background="@color/darkgray"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="start"
                android:paddingBottom="@dimen/padding10"
                android:paddingStart="@dimen/padding10"
                android:paddingLeft="@dimen/padding10"
                android:paddingEnd="@dimen/padding10"
                android:textColor="@color/white"
                android:textSize="@dimen/font23" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_trailers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/reviews_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gradient_down"
                android:gravity="start"
                android:paddingBottom="@dimen/padding10"
                android:paddingTop="@dimen/padding10"
                android:paddingStart="@dimen/padding10"
                android:paddingLeft="@dimen/padding10"
                android:paddingEnd="@dimen/padding10"
                android:text="@string/Review_section_title"
                android:textColor="@color/colorGold"
                android:textSize="@dimen/font23" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>


        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/margin16"
            android:clickable="true"
            android:src="@drawable/ic_favorite_white_24dp"
            android:tint="@color/colorGold" />

    </FrameLayout>
</ScrollView>